# Bibbl Log Stream Docker Environment Configuration
# Copy to .env and modify as needed

# Build Configuration
BIBBL_VERSION=0.1.0
BIBBL_COMMIT=docker
BIBBL_BUILD_DATE=

# Server Configuration
BIBBL_SERVER_HOST=0.0.0.0
BIBBL_SERVER_PORT=9444

# TLS Configuration - Auto-generated certificates
BIBBL_TLS_EXTRA_HOSTS=bibbl.clarityxdr.com,192.168.0.218
BIBBL_SERVER_TLS_MIN_VERSION=1.2

# Alternatively, provide custom certificates
# BIBBL_SERVER_TLS_CERT_FILE=/app/certs/server.crt
# BIBBL_SERVER_TLS_KEY_FILE=/app/certs/server.key

# Logging
BIBBL_LOGGING_LEVEL=info
BIBBL_LOGGING_FORMAT=json

# Syslog Input
BIBBL_INPUTS_SYSLOG_ENABLED=true
BIBBL_INPUTS_SYSLOG_HOST=0.0.0.0
BIBBL_INPUTS_SYSLOG_PORT=6514
BIBBL_INPUTS_SYSLOG_TLS_MIN_VERSION=1.2

# Microsoft Sentinel Output (uncomment and configure as needed)
# BIBBL_OUTPUTS_SENTINEL_ENABLED=true
# BIBBL_OUTPUTS_SENTINEL_WORKSPACE_ID=your-workspace-id
# BIBBL_OUTPUTS_SENTINEL_SHARED_KEY=your-shared-key
# BIBBL_OUTPUTS_SENTINEL_TABLE_NAME=Custom_BibblLogs_CL

# Azure Data Lake Output (uncomment and configure as needed)
# BIBBL_OUTPUTS_AZURE_DATALAKE_ENABLED=true
# BIBBL_OUTPUTS_AZURE_DATALAKE_STORAGE_ACCOUNT=your-storage-account
# BIBBL_OUTPUTS_AZURE_DATALAKE_FILESYSTEM=logs
# BIBBL_OUTPUTS_AZURE_DATALAKE_DIRECTORY=bibbl/raw

# Splunk Output (uncomment and configure as needed)
# BIBBL_OUTPUTS_SPLUNK_ENABLED=true
# BIBBL_OUTPUTS_SPLUNK_URL=https://your-splunk.com:8088
# BIBBL_OUTPUTS_SPLUNK_TOKEN=your-hec-token
# BIBBL_OUTPUTS_SPLUNK_INDEX=main